@model HealthcareManagementSystem.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-times text-danger"></i> Delete Patient</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-list"></i> Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Warning!</strong> You are about to delete this patient permanently. This action cannot be undone and will also remove all associated appointments and medical records.
            </div>

            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5><i class="fas fa-user-times"></i> Patient to be Deleted</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Full Name:</dt>
                        <dd class="col-sm-9">
                            <i class="fas fa-user text-primary"></i>
                            @Model.FirstName @Model.LastName
                        </dd>

                        <dt class="col-sm-3">Date of Birth:</dt>
                        <dd class="col-sm-9">
                            <i class="fas fa-birthday-cake text-info"></i>
                            @Model.DateOfBirth.ToString("MMM dd, yyyy") (@(DateTime.Now.Year - Model.DateOfBirth.Year) years old)
                        </dd>

                        <dt class="col-sm-3">Gender:</dt>
                        <dd class="col-sm-9">
                            <i class="fas fa-@(Model.Gender == "Male" ? "mars" : "venus") text-@(Model.Gender == "Male" ? "info" : "pink")"></i>
                            @Model.Gender
                        </dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">
                            <i class="fas fa-envelope text-secondary"></i>
                            @Model.Email
                        </dd>

                        <dt class="col-sm-3">Phone:</dt>
                        <dd class="col-sm-9">
                            <i class="fas fa-phone text-success"></i>
                            @Model.PhoneNumber
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.BloodType))
                        {
                            <dt class="col-sm-3">Blood Type:</dt>
                            <dd class="col-sm-9">
                                <i class="fas fa-tint text-danger"></i>
                                @Model.BloodType
                            </dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            <dt class="col-sm-3">Address:</dt>
                            <dd class="col-sm-9">
                                <i class="fas fa-home text-warning"></i>
                                @Model.Address
                            </dd>
                        }

                        <dt class="col-sm-3">Registered:</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="PatientId" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Patient
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.PatientId" class="btn btn-info">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6><i class="fas fa-exclamation-circle text-warning"></i> Important Information</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-exclamation-circle text-danger"></i> This action is permanent and cannot be undone</li>
                        <li><i class="fas fa-calendar-times text-warning"></i> All appointments will be deleted</li>
                        <li><i class="fas fa-file-medical text-info"></i> All medical records will be removed</li>
                        <li><i class="fas fa-pills text-secondary"></i> All prescriptions will be deleted</li>
                        <li><i class="fas fa-shield-alt text-success"></i> Consider marking as inactive instead</li>
                    </ul>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.EmergencyContactName))
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <h6><i class="fas fa-phone-alt text-danger"></i> Emergency Contact</h6>
                    </div>
                    <div class="card-body">
                        <p><strong>@Model.EmergencyContactName</strong></p>
                        <p><i class="fas fa-phone"></i> @Model.EmergencyContactPhone</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
