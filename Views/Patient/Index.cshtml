@model IEnumerable<HealthcareManagementSystem.Models.Patient>

@{
    ViewData["Title"] = "Patient Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users text-primary"></i> Patient Management</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Register New Patient
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Search Form -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Search" method="get" class="row g-3">
            <div class="col-md-8">
                <input type="text" class="form-control" name="searchTerm" value="@ViewData["SearchTerm"]" 
                       placeholder="Search by name, email, or phone number..." />
            </div>
            <div class="col-md-4">
                <div class="d-grid gap-2 d-md-flex">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Patients Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-table"></i> Patients List 
            <span class="badge bg-primary ms-2">@Model.Count() patients</span>
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-user"></i> Name</th>
                            <th><i class="fas fa-envelope"></i> Email</th>
                            <th><i class="fas fa-phone"></i> Phone</th>
                            <th><i class="fas fa-birthday-cake"></i> Date of Birth</th>
                            <th><i class="fas fa-venus-mars"></i> Gender</th>
                            <th><i class="fas fa-tint"></i> Blood Type</th>
                            <th><i class="fas fa-cogs"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary text-white me-2">
                                            @patient.FirstName.Substring(0, 1).ToUpper()@patient.LastName.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <strong>@patient.FirstName @patient.LastName</strong>
                                            <br />
                                            <small class="text-muted">ID: #@patient.PatientId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a href="mailto:@patient.Email" class="text-decoration-none">
                                        @patient.Email
                                    </a>
                                </td>
                                <td>
                                    <a href="tel:@patient.PhoneNumber" class="text-decoration-none">
                                        @patient.PhoneNumber
                                    </a>
                                </td>
                                <td>
                                    @patient.DateOfBirth.ToString("MMM dd, yyyy")
                                    <br />
                                    <small class="text-muted">Age: @((DateTime.Now - patient.DateOfBirth).Days / 365) years</small>
                                </td>
                                <td>
                                    <span class="badge @(patient.Gender == "Male" ? "bg-info" : "bg-warning")">
                                        @patient.Gender
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-danger">@(patient.BloodType ?? "Unknown")</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@patient.PatientId" 
                                           class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@patient.PatientId" 
                                           class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@patient.PatientId" 
                                           class="btn btn-sm btn-outline-danger" title="Delete"
                                           onclick="return confirm('Are you sure you want to delete this patient?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-user-times fa-3x text-muted mb-3"></i>
                <h5>No patients found</h5>
                <p class="text-muted">@(ViewData["SearchTerm"] != null ? "No patients match your search criteria." : "Start by registering your first patient.")</p>
                @if (ViewData["SearchTerm"] == null)
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Register First Patient
                    </a>
                }
            </div>
        }
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        font-weight: bold;
    }
</style>
