@model IEnumerable<HealthcareManagementSystem.Models.Appointment>

@{
    ViewData["Title"] = "Appointment Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-calendar-check text-success"></i> Appointment Management</h2>
    <div>
        <a asp-action="Today" class="btn btn-outline-success me-2">
            <i class="fas fa-calendar-day"></i> Today's Appointments
        </a>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Schedule New Appointment
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Appointments Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-table"></i> @(ViewData["Title"]?.ToString() ?? "Appointments List")
            <span class="badge bg-success ms-2">@Model.Count() appointments</span>
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-calendar"></i> Date & Time</th>
                            <th><i class="fas fa-user-injured"></i> Patient</th>
                            <th><i class="fas fa-user-md"></i> Doctor</th>
                            <th><i class="fas fa-comment"></i> Reason</th>
                            <th><i class="fas fa-info-circle"></i> Status</th>
                            <th><i class="fas fa-cogs"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appointment in Model)
                        {
                            <tr class="@(appointment.AppointmentDateTime.Date == DateTime.Today ? "table-warning" : "")">
                                <td>
                                    <div>
                                        <strong>@appointment.AppointmentDateTime.ToString("MMM dd, yyyy")</strong>
                                        <br />
                                        <span class="text-muted">@appointment.AppointmentDateTime.ToString("hh:mm tt")</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary text-white me-2">
                                            @if (appointment.Patient != null)
                                            {
                                                @appointment.Patient.FirstName.Substring(0, 1).ToUpper()@appointment.Patient.LastName.Substring(0, 1).ToUpper()
                                            }
                                        </div>
                                        <div>
                                            @if (appointment.Patient != null)
                                            {
                                                <strong>@appointment.Patient.FirstName @appointment.Patient.LastName</strong>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Patient not found</span>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (appointment.Doctor != null)
                                    {
                                        <div>
                                            <strong>Dr. @appointment.Doctor.FirstName @appointment.Doctor.LastName</strong>
                                            <br />
                                            <small class="text-muted">@appointment.Doctor.Specialization</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Doctor not found</span>
                                    }
                                </td>
                                <td>
                                    <span class="text-truncate" style="max-width: 200px; display: inline-block;" title="@appointment.ReasonForVisit">
                                        @appointment.ReasonForVisit
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(appointment.Status == AppointmentStatus.Completed ? "bg-success" : 
                                                        appointment.Status == AppointmentStatus.Cancelled ? "bg-danger" : 
                                                        appointment.Status == AppointmentStatus.InProgress ? "bg-warning" : "bg-info")">
                                        @appointment.StatusDisplayName
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@appointment.AppointmentId" 
                                           class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@appointment.AppointmentId" 
                                           class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        
                                        @if (appointment.Status == AppointmentStatus.Scheduled)
                                        {
                                            <button class="btn btn-sm btn-outline-success" 
                                                    onclick="updateStatus(@appointment.AppointmentId, '@((int)AppointmentStatus.Completed)')" 
                                                    title="Mark as Completed">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        }
                                        
                                        <a asp-action="Delete" asp-route-id="@appointment.AppointmentId" 
                                           class="btn btn-sm btn-outline-danger" title="Delete"
                                           onclick="return confirm('Are you sure you want to delete this appointment?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                <h5>No appointments found</h5>
                <p class="text-muted">No appointments scheduled yet. Start by scheduling the first appointment.</p>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Schedule First Appointment
                </a>
            </div>
        }
    </div>
</div>

<!-- Status Update Form (hidden) -->
<form id="statusForm" method="post" style="display: none;">
    <input name="id" type="hidden" />
    <input name="status" type="hidden" />
    @Html.AntiForgeryToken()
</form>

<style>
    .avatar-circle {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        font-weight: bold;
    }
    
    .table-warning td {
        background-color: rgba(255, 193, 7, 0.1) !important;
    }
</style>

<script>
    function updateStatus(appointmentId, status) {
        if (confirm('Are you sure you want to mark this appointment as ' + status + '?')) {
            var form = document.getElementById('statusForm');
            form.action = '@Url.Action("UpdateStatus")';
            form.querySelector('input[name="id"]').value = appointmentId;
            form.querySelector('input[name="status"]').value = status;
            form.submit();
        }
    }
</script>
