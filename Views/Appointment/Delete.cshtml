@model HealthcareManagementSystem.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-trash text-danger"></i> Delete Appointment</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-list"></i> Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Warning!</strong> You are about to delete this appointment permanently. This action cannot be undone.
            </div>

            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5><i class="fas fa-calendar-times"></i> Appointment to be Deleted</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Patient:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Patient != null)
                            {
                                <i class="fas fa-user text-primary"></i>
                                @Model.Patient.FirstName @Model.Patient.LastName
                            }
                            else
                            {
                                <span class="text-muted">Patient information not available</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Doctor:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Doctor != null)
                            {
                                <i class="fas fa-user-md text-info"></i>
                                <text>Dr. @Model.Doctor.FirstName @Model.Doctor.LastName</text>
                            }
                            else
                            {
                                <span class="text-muted">Doctor information not available</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Date & Time:</dt>
                        <dd class="col-sm-9">
                            <i class="fas fa-calendar text-success"></i>
                            @Model.AppointmentDateTime.ToString("dddd, MMM dd, yyyy 'at' hh:mm tt")
                        </dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            @switch ((int)Model.Status)
                            {
                                case 0:
                                    <span class="badge bg-secondary">Scheduled</span>
                                    break;
                                case 1:
                                    <span class="badge bg-info">Confirmed</span>
                                    break;
                                case 2:
                                    <span class="badge bg-warning">In Progress</span>
                                    break;
                                case 3:
                                    <span class="badge bg-success">Completed</span>
                                    break;
                                case 4:
                                    <span class="badge bg-danger">Cancelled</span>
                                    break;
                                case 5:
                                    <span class="badge bg-dark">No Show</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-3">Reason for Visit:</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.ReasonForVisit))
                            {
                                @Model.ReasonForVisit
                            }
                            else
                            {
                                <span class="text-muted">No reason specified</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Fee:</dt>
                        <dd class="col-sm-9">
                            <i class="fas fa-dollar-sign text-success"></i>
                            $@Model.Fee.ToString("F2")
                            @if (Model.IsPaid)
                            {
                                <span class="badge bg-success ms-2">Paid</span>
                            }
                            else
                            {
                                <span class="badge bg-warning ms-2">Unpaid</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="AppointmentId" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Appointment
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.AppointmentId" class="btn btn-secondary">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6><i class="fas fa-info-circle"></i> Important Information</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-exclamation-circle text-danger"></i> This action is permanent</li>
                        <li><i class="fas fa-database text-warning"></i> All appointment data will be lost</li>
                        <li><i class="fas fa-user text-info"></i> Patient and doctor records will remain</li>
                        <li><i class="fas fa-history text-secondary"></i> Consider changing status to "Cancelled" instead</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
