@model IEnumerable<HealthcareManagementSystem.Models.Doctor>

@{
    ViewData["Title"] = "Doctor Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-md text-info"></i> Doctor Management</h2>
    <a asp-action="Create" class="btn btn-info">
        <i class="fas fa-plus"></i> Add New Doctor
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Search Form -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Search" method="get" class="row g-3">
            <div class="col-md-8">
                <input type="text" class="form-control" name="searchTerm" value="@ViewData["SearchTerm"]" 
                       placeholder="Search by name, specialization, or department..." />
            </div>
            <div class="col-md-4">
                <div class="d-grid gap-2 d-md-flex">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Doctors Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-table"></i> Doctors List 
            <span class="badge bg-info ms-2">@Model.Count() doctors</span>
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-user"></i> Name</th>
                            <th><i class="fas fa-stethoscope"></i> Specialization</th>
                            <th><i class="fas fa-building"></i> Department</th>
                            <th><i class="fas fa-envelope"></i> Email</th>
                            <th><i class="fas fa-phone"></i> Phone</th>
                            <th><i class="fas fa-dollar-sign"></i> Consultation Fee</th>
                            <th><i class="fas fa-cogs"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doctor in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-info text-white me-2">
                                            @doctor.FirstName.Substring(0, 1).ToUpper()@doctor.LastName.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <strong>Dr. @doctor.FirstName @doctor.LastName</strong>
                                            <br />
                                            <small class="text-muted">@doctor.YearsOfExperience years exp.</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@doctor.Specialization</span>
                                </td>
                                <td>@doctor.Department</td>
                                <td>
                                    <a href="mailto:@doctor.Email" class="text-decoration-none">
                                        @doctor.Email
                                    </a>
                                </td>
                                <td>
                                    <a href="tel:@doctor.PhoneNumber" class="text-decoration-none">
                                        @doctor.PhoneNumber
                                    </a>
                                </td>
                                <td>
                                    <strong>â‚¹@doctor.ConsultationFee</strong>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@doctor.DoctorId" 
                                           class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@doctor.DoctorId" 
                                           class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@doctor.DoctorId" 
                                           class="btn btn-sm btn-outline-danger" title="Delete"
                                           onclick="return confirm('Are you sure you want to delete this doctor?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-user-md fa-3x text-muted mb-3"></i>
                <h5>No doctors found</h5>
                <p class="text-muted">@(ViewData["SearchTerm"] != null ? "No doctors match your search criteria." : "Start by adding your first doctor.")</p>
                @if (ViewData["SearchTerm"] == null)
                {
                    <a asp-action="Create" class="btn btn-info">
                        <i class="fas fa-plus"></i> Add First Doctor
                    </a>
                }
            </div>
        }
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        font-weight: bold;
    }
</style>
