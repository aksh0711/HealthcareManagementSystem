@model HealthcareManagementSystem.Models.Doctor

@{
    ViewData["Title"] = "Delete Doctor";
}

<div class="container-fluid">
    <div class="alert alert-warning">
        <strong>Warning!</strong> Are you sure you want to delete this doctor?
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5>Delete Doctor</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Name:</dt>
                <dd class="col-sm-10">Dr. @Model.FirstName @Model.LastName</dd>

                <dt class="col-sm-2">Email:</dt>
                <dd class="col-sm-10">@Model.Email</dd>

                <dt class="col-sm-2">Specialization:</dt>
                <dd class="col-sm-10">@Model.Specialization</dd>

                <dt class="col-sm-2">Department:</dt>
                <dd class="col-sm-10">@Model.Department</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="DoctorId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
