@model IEnumerable<HealthcareManagementSystem.Models.Prescription>

@{
    ViewData["Title"] = "Prescription Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-pills text-warning"></i> Prescription Management</h2>
    <a asp-action="Create" class="btn btn-warning">
        <i class="fas fa-plus"></i> Create New Prescription
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Prescriptions Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-table"></i> Prescriptions List
            <span class="badge bg-warning ms-2">@Model.Count() prescriptions</span>
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-user-injured"></i> Patient</th>
                            <th><i class="fas fa-user-md"></i> Doctor</th>
                            <th><i class="fas fa-pills"></i> Medication</th>
                            <th><i class="fas fa-prescription-bottle"></i> Dosage</th>
                            <th><i class="fas fa-calendar"></i> Issued Date</th>
                            <th><i class="fas fa-info-circle"></i> Status</th>
                            <th><i class="fas fa-cogs"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var prescription in Model)
                        {
                            <tr>
                                <td>
                                    @if (prescription.Patient != null)
                                    {
                                        <strong>@prescription.Patient.FirstName @prescription.Patient.LastName</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Patient not found</span>
                                    }
                                </td>
                                <td>
                                    @if (prescription.Doctor != null)
                                    {
                                        <div>
                                            <strong>Dr. @prescription.Doctor.FirstName @prescription.Doctor.LastName</strong>
                                            <br />
                                            <small class="text-muted">@prescription.Doctor.Specialization</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Doctor not found</span>
                                    }
                                </td>
                                <td>
                                    <strong>@prescription.MedicationName</strong>
                                </td>
                                <td>
                                    <div>
                                        <strong>@prescription.Dosage</strong>
                                        <br />
                                        <small class="text-muted">@prescription.Frequency</small>
                                    </div>
                                </td>
                                <td>
                                    @prescription.PrescribedDate.ToString("MMM dd, yyyy")
                                </td>
                                <td>
                                    <span class="badge @(prescription.IsActive ? "bg-success" : "bg-secondary")">
                                        @(prescription.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@prescription.PrescriptionId" 
                                           class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@prescription.PrescriptionId" 
                                           class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@prescription.PrescriptionId" 
                                           class="btn btn-sm btn-outline-danger" title="Delete"
                                           onclick="return confirm('Are you sure you want to delete this prescription?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-prescription fa-3x text-muted mb-3"></i>
                <h5>No prescriptions found</h5>
                <p class="text-muted">No prescriptions created yet. Start by creating the first prescription.</p>
                <a asp-action="Create" class="btn btn-warning">
                    <i class="fas fa-plus"></i> Create First Prescription
                </a>
            </div>
        }
    </div>
</div>
