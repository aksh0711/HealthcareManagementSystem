@model HealthcareManagementSystem.Models.Prescription

@{
    ViewData["Title"] = "Delete Prescription";
}

<div class="container-fluid">
    <div class="alert alert-warning">
        <strong>Warning!</strong> Are you sure you want to delete this prescription?
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5>Delete Prescription</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Medication:</dt>
                <dd class="col-sm-10">@Model.MedicationName</dd>

                <dt class="col-sm-2">Dosage:</dt>
                <dd class="col-sm-10">@Model.Dosage</dd>

                <dt class="col-sm-2">Patient:</dt>
                <dd class="col-sm-10">
                    @if (Model.Patient != null)
                    {
                        @Model.Patient.FirstName @Model.Patient.LastName
                    }
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="PrescriptionId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
