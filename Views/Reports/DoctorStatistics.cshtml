@model HealthcareManagementSystem.Controllers.DoctorStatisticsViewModel

@{
    ViewData["Title"] = "Doctor Statistics";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-md text-info"></i> Doctor Statistics</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-list"></i> Back to Reports
        </a>
    </div>
    
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-bar"></i> General Statistics</h5>
                </div>
                <div class="card-body text-center">
                    <h3 class="text-info">@Model.TotalDoctors</h3>
                    <small class="text-muted">Total Doctors</small>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-stethoscope"></i> By Specialization</h5>
                </div>
                <div class="card-body">
                    @if (Model.SpecializationDistribution.Any())
                    {
                        @foreach (var spec in Model.SpecializationDistribution)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>@spec.Key:</span>
                                <span class="badge bg-primary">@spec.Value</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No specialization data available.</p>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-building"></i> By Department</h5>
                </div>
                <div class="card-body">
                    @if (Model.DepartmentDistribution.Any())
                    {
                        @foreach (var dept in Model.DepartmentDistribution)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>@dept.Key:</span>
                                <span class="badge bg-success">@dept.Value</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No department data available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
    
    @if (Model.DoctorAppointmentCounts.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-calendar-check"></i> Top Doctors by Appointments</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var doctor in Model.DoctorAppointmentCounts.Take(6))
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>@doctor.Key:</span>
                                        <span class="badge bg-warning">@doctor.Value</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
