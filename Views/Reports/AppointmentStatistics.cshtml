@model HealthcareManagementSystem.Controllers.AppointmentStatisticsViewModel

@{
    ViewData["Title"] = "Appointment Statistics";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-calendar text-success"></i> Appointment Statistics</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-list"></i> Back to Reports
        </a>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-bar"></i> General Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <h3 class="text-primary">@Model.TotalAppointments</h3>
                            <small class="text-muted">Total Appointments</small>
                        </div>
                        <div class="col-6 mb-3">
                            <h3 class="text-success">@Model.TodayAppointments</h3>
                            <small class="text-muted">Today's Appointments</small>
                        </div>
                        <div class="col-6">
                            <h3 class="text-info">@Model.ThisWeekAppointments</h3>
                            <small class="text-muted">This Week</small>
                        </div>
                        <div class="col-6">
                            <h3 class="text-warning">@Model.ThisMonthAppointments</h3>
                            <small class="text-muted">This Month</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-tasks"></i> Appointment Status</h5>
                </div>
                <div class="card-body">
                    @if (Model.StatusDistribution.Any())
                    {
                        @foreach (var status in Model.StatusDistribution)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>@status.Key:</span>
                                <span class="badge bg-secondary">@status.Value</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No appointment status data available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
    
    @if (Model.MonthlyAppointments.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-chart-line"></i> Monthly Appointment Trends</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var month in Model.MonthlyAppointments)
                            {
                                <div class="col-md-2 mb-3 text-center">
                                    <h5 class="text-primary">@month.Value</h5>
                                    <small class="text-muted">@month.Key</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
