@{
    ViewData["Title"] = "Healthcare Management Dashboard";
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="hero-section bg-gradient text-white text-center p-5 rounded-4 shadow">
                <div class="hero-content">
                    <i class="fas fa-hospital-alt fa-3x mb-3 text-light"></i>
                    <h1 class="display-4 fw-bold mb-3">HealthCare Pro</h1>
                    <p class="lead mb-4">Comprehensive patient care and medical record management solution</p>
                    <div class="hero-stats row g-3 justify-content-center">
                        <div class="col-6 col-md-3">
                            <div class="stat-item">
                                <h3 class="fw-bold mb-0">24/7</h3>
                                <small class="text-light-emphasis">Support</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="stat-item">
                                <h3 class="fw-bold mb-0">100%</h3>
                                <small class="text-light-emphasis">Secure</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="stat-item">
                                <h3 class="fw-bold mb-0">Fast</h3>
                                <small class="text-light-emphasis">Processing</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="stat-item">
                                <h3 class="fw-bold mb-0">Smart</h3>
                                <small class="text-light-emphasis">Analytics</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-6 col-xl-3">
            <div class="management-card card h-100 shadow-lg border-0 hover-lift">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-user-injured fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3">Patient Management</h5>
                    <p class="card-text text-muted">Register new patients, view patient records, and manage patient information efficiently.</p>
                    <div class="mt-auto">
                        <a href="@Url.Action("Index", "Patient")" class="btn btn-primary btn-hover w-100">
                            <i class="fas fa-arrow-right me-2"></i>Manage Patients
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="management-card card h-100 shadow-lg border-0 hover-lift">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-calendar-check fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3">Appointments</h5>
                    <p class="card-text text-muted">Schedule appointments, view upcoming appointments, and manage scheduling seamlessly.</p>
                    <div class="mt-auto">
                        <a asp-controller="Appointment" asp-action="Index" class="btn btn-success btn-hover w-100">
                            <i class="fas fa-arrow-right me-2"></i>View Appointments
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="management-card card h-100 shadow-lg border-0 hover-lift">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-user-md fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3">Doctor Management</h5>
                    <p class="card-text text-muted">Manage doctor profiles, specializations, availability, and medical credentials.</p>
                    <div class="mt-auto">
                        <a asp-controller="Doctor" asp-action="Index" class="btn btn-info btn-hover w-100">
                            <i class="fas fa-arrow-right me-2"></i>Manage Doctors
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="management-card card h-100 shadow-lg border-0 hover-lift">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-pills fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3">Prescriptions</h5>
                    <p class="card-text text-muted">Create prescriptions, track medication history, and manage pharmacy orders effectively.</p>
                    <div class="mt-auto">
                        <a asp-controller="Prescription" asp-action="Index" class="btn btn-warning btn-hover w-100 text-dark">
                            <i class="fas fa-arrow-right me-2"></i>View Prescriptions
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">📊 Quick Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-sm-3">
                            <div class="border-right">
                                <h4 class="text-primary">0</h4>
                                <small>Total Patients</small>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="border-right">
                                <h4 class="text-success">0</h4>
                                <small>Today's Appointments</small>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="border-right">
                                <h4 class="text-info">0</h4>
                                <small>Active Doctors</small>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <h4 class="text-warning">0</h4>
                            <small>Pending Prescriptions</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">🚀 Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Create", "Patient")" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-plus me-2"></i>Register New Patient
                        </a>
                        <a asp-controller="Appointment" asp-action="Create" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-calendar-plus me-2"></i>Schedule Appointment
                        </a>
                        <a asp-controller="Doctor" asp-action="Create" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-user-md me-2"></i>Add New Doctor
                        </a>
                        <a asp-controller="Prescription" asp-action="Create" class="btn btn-outline-warning btn-sm">
                            <i class="fas fa-prescription me-2"></i>New Prescription
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
