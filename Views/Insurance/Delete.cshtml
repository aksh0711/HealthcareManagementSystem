@model HealthcareManagementSystem.Models.Insurance

@{
    ViewData["Title"] = "Delete Insurance Policy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header bg-danger">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1><i class="fas fa-trash-alt"></i> Delete Insurance Policy</h1>
                <p class="text-light">Are you sure you want to delete this insurance policy?</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Warning!</h4>
                <p>You are about to permanently delete this insurance policy. This action cannot be undone.</p>
                <hr>
                <p class="mb-0">All associated documents and records will also be deleted.</p>
            </div>

            <!-- Policy Information Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Policy Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Patient:</dt>
                                <dd class="col-sm-7">@Model.Patient?.FullName</dd>

                                <dt class="col-sm-5">Provider:</dt>
                                <dd class="col-sm-7">@Model.ProviderName</dd>

                                <dt class="col-sm-5">Policy Number:</dt>
                                <dd class="col-sm-7">@Model.PolicyNumber</dd>

                                <dt class="col-sm-5">Group Number:</dt>
                                <dd class="col-sm-7">@Model.GroupNumber</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Effective Date:</dt>
                                <dd class="col-sm-7">@Model.EffectiveDate.ToString("MM/dd/yyyy")</dd>

                                <dt class="col-sm-5">Expiration Date:</dt>
                                <dd class="col-sm-7">@(Model.ExpirationDate?.ToString("MM/dd/yyyy") ?? "Not set")</dd>

                                <dt class="col-sm-5">Status:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-@(Model.IsActive ? (Model.IsExpired ? "warning" : "success") : "secondary")">
                                        @Model.Status
                                    </span>
                                </dd>

                                <dt class="col-sm-5">Created:</dt>
                                <dd class="col-sm-7">@Model.CreatedAt.ToString("MM/dd/yyyy h:mm tt")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.PrimaryInsuredName))
                    {
                        <hr>
                        <dl class="row">
                            <dt class="col-sm-3">Primary Insured:</dt>
                            <dd class="col-sm-9">@Model.PrimaryInsuredName</dd>

                            @if (!string.IsNullOrEmpty(Model.RelationshipToPrimary))
                            {
                                <dt class="col-sm-3">Relationship:</dt>
                                <dd class="col-sm-9">@Model.RelationshipToPrimary</dd>
                            }
                        </dl>
                    }
                </div>
            </div>

            <!-- Coverage Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-money-bill-alt"></i> Coverage Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div class="border rounded p-3">
                                <h6 class="text-muted">Copay Amount</h6>
                                <h4 class="text-success">${@Model.CopayAmount:F2}</h4>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="border rounded p-3">
                                <h6 class="text-muted">Deductible</h6>
                                <h4 class="text-warning">${@Model.DeductibleAmount:F2}</h4>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="border rounded p-3">
                                <h6 class="text-muted">Coverage</h6>
                                <h4 class="text-primary">@Model.CoveragePercentage%</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Documents Information -->
            @if (!string.IsNullOrEmpty(Model.FrontCardImagePath) || !string.IsNullOrEmpty(Model.BackCardImagePath) || !string.IsNullOrEmpty(Model.AdditionalDocumentsPath))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-file-alt"></i> Uploaded Documents</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @if (!string.IsNullOrEmpty(Model.FrontCardImagePath))
                            {
                                <div class="col-md-4 text-center mb-3">
                                    <div class="border rounded p-3">
                                        <i class="fas fa-file-image fa-2x text-primary mb-2"></i>
                                        <p class="mb-0">Front Card Image</p>
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.BackCardImagePath))
                            {
                                <div class="col-md-4 text-center mb-3">
                                    <div class="border rounded p-3">
                                        <i class="fas fa-file-image fa-2x text-primary mb-2"></i>
                                        <p class="mb-0">Back Card Image</p>
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.AdditionalDocumentsPath))
                            {
                                <div class="col-md-4 text-center mb-3">
                                    <div class="border rounded p-3">
                                        <i class="fas fa-files-o fa-2x text-info mb-2"></i>
                                        <p class="mb-0">@(Model.AdditionalDocumentsPath.Split(';').Length) Additional Documents</p>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.DocumentsUploadedAt.HasValue)
                        {
                            <p class="text-muted small mt-2">
                                <i class="fas fa-clock"></i> Documents uploaded on @Model.DocumentsUploadedAt.Value.ToString("MM/dd/yyyy h:mm tt")
                            </p>
                        }
                    </div>
                </div>
            }

            <!-- Notes -->
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-sticky-note"></i> Notes</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Notes</p>
                    </div>
                </div>
            }

            <!-- Confirmation Form -->
            <div class="card border-danger">
                <div class="card-body text-center">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="InsuranceId" />
                        
                        <div class="mb-3">
                            <i class="fas fa-exclamation-circle fa-3x text-danger mb-3"></i>
                            <h5>This action is irreversible!</h5>
                            <p class="text-muted">The insurance policy and all its associated documents will be permanently deleted.</p>
                        </div>

                        <div class="d-flex justify-content-center gap-3">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.InsuranceId" class="btn btn-outline-info btn-lg">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash-alt"></i> Delete Policy
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add confirmation dialog
        document.querySelector('form[asp-action="Delete"]').addEventListener('submit', function(e) {
            if (!confirm('Are you absolutely sure you want to delete this insurance policy? This action cannot be undone.')) {
                e.preventDefault();
            }
        });

        // Auto-focus cancel button for safety
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('.btn-outline-secondary').focus();
        });
    </script>
}
