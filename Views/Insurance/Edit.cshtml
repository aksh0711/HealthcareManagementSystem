@model HealthcareManagementSystem.Models.Insurance

@{
    ViewData["Title"] = "Edit Insurance Policy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1><i class="fas fa-edit"></i> Edit Insurance Policy</h1>
                <p>Update insurance policy information for @Model.Patient?.FullName</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <form asp-action="Edit" method="post" enctype="multipart/form-data" class="fade-in">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="InsuranceId" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="DocumentsUploadedAt" />

                <!-- Patient Information Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-user"></i> Patient Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <select asp-for="PatientId" class="form-select" asp-items="ViewBag.PatientId" required>
                                        <option value="">Select a patient...</option>
                                    </select>
                                    <label asp-for="PatientId">Patient *</label>
                                    <span asp-validation-for="PatientId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Insurance Details Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-shield-alt"></i> Insurance Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ProviderName" class="form-control" placeholder="Insurance Provider" required />
                                    <label asp-for="ProviderName">Insurance Provider *</label>
                                    <span asp-validation-for="ProviderName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="PolicyNumber" class="form-control" placeholder="Policy Number" required />
                                    <label asp-for="PolicyNumber">Policy Number *</label>
                                    <span asp-validation-for="PolicyNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="GroupNumber" class="form-control" placeholder="Group Number" required />
                                    <label asp-for="GroupNumber">Group Number *</label>
                                    <span asp-validation-for="GroupNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="PrimaryInsuredName" class="form-control" placeholder="Primary Insured Name" />
                                    <label asp-for="PrimaryInsuredName">Primary Insured Name</label>
                                    <span asp-validation-for="PrimaryInsuredName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <select asp-for="RelationshipToPrimary" class="form-select">
                                        <option value="">Select relationship...</option>
                                        <option value="Self">Self</option>
                                        <option value="Spouse">Spouse</option>
                                        <option value="Child">Child</option>
                                        <option value="Parent">Parent</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <label asp-for="RelationshipToPrimary">Relationship to Primary</label>
                                    <span asp-validation-for="RelationshipToPrimary" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Policy Dates Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-calendar-alt"></i> Policy Dates</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="EffectiveDate" type="date" class="form-control" required />
                                    <label asp-for="EffectiveDate">Effective Date *</label>
                                    <span asp-validation-for="EffectiveDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ExpirationDate" type="date" class="form-control" />
                                    <label asp-for="ExpirationDate">Expiration Date</label>
                                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Coverage Information Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-money-bill-alt"></i> Coverage Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="CopayAmount" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                                    <label asp-for="CopayAmount">Copay Amount ($)</label>
                                    <span asp-validation-for="CopayAmount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="DeductibleAmount" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                                    <label asp-for="DeductibleAmount">Deductible Amount ($)</label>
                                    <span asp-validation-for="DeductibleAmount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="CoveragePercentage" type="number" step="1" min="0" max="100" class="form-control" placeholder="80" />
                                    <label asp-for="CoveragePercentage">Coverage Percentage (%)</label>
                                    <span asp-validation-for="CoveragePercentage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Current Documents Display -->
                @if (!string.IsNullOrEmpty(Model.FrontCardImagePath) || !string.IsNullOrEmpty(Model.BackCardImagePath) || !string.IsNullOrEmpty(Model.AdditionalDocumentsPath))
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-file-alt"></i> Current Documents</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @if (!string.IsNullOrEmpty(Model.FrontCardImagePath))
                                {
                                    <div class="col-md-4 mb-3">
                                        <label>Front Card:</label>
                                        <div class="border p-2 rounded">
                                            <i class="fas fa-file-image"></i> Current front card on file
                                            <div class="form-check mt-2">
                                                <input type="checkbox" name="removeFrontCard" value="true" class="form-check-input" id="removeFrontCard">
                                                <label class="form-check-label text-danger" for="removeFrontCard">Remove current front card</label>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.BackCardImagePath))
                                {
                                    <div class="col-md-4 mb-3">
                                        <label>Back Card:</label>
                                        <div class="border p-2 rounded">
                                            <i class="fas fa-file-image"></i> Current back card on file
                                            <div class="form-check mt-2">
                                                <input type="checkbox" name="removeBackCard" value="true" class="form-check-input" id="removeBackCard">
                                                <label class="form-check-label text-danger" for="removeBackCard">Remove current back card</label>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.AdditionalDocumentsPath))
                                {
                                    <div class="col-md-4 mb-3">
                                        <label>Additional Documents:</label>
                                        <div class="border p-2 rounded">
                                            <i class="fas fa-files-o"></i> @(Model.AdditionalDocumentsPath.Split(';').Length) document(s) on file
                                            <div class="form-check mt-2">
                                                <input type="checkbox" name="removeAdditionalDocs" value="true" class="form-check-input" id="removeAdditionalDocs">
                                                <label class="form-check-label text-danger" for="removeAdditionalDocs">Remove all additional documents</label>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Insurance Card Upload Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-upload"></i> Update Insurance Card Documents</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="form-label">Front of Insurance Card</label>
                                <div class="file-upload-area" onclick="document.getElementById('frontCardImage').click()">
                                    <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                                    <p>Click to upload new front card image</p>
                                    <p class="small text-muted">Supported formats: JPG, PNG, PDF (Max 5MB)</p>
                                </div>
                                <input type="file" id="frontCardImage" name="frontCardImage" accept=".jpg,.jpeg,.png,.pdf" style="display: none;" onchange="previewFile(this, 'frontPreview')" />
                                <div id="frontPreview" class="mt-2"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Back of Insurance Card</label>
                                <div class="file-upload-area" onclick="document.getElementById('backCardImage').click()">
                                    <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                                    <p>Click to upload new back card image</p>
                                    <p class="small text-muted">Supported formats: JPG, PNG, PDF (Max 5MB)</p>
                                </div>
                                <input type="file" id="backCardImage" name="backCardImage" accept=".jpg,.jpeg,.png,.pdf" style="display: none;" onchange="previewFile(this, 'backPreview')" />
                                <div id="backPreview" class="mt-2"></div>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Additional Documents (Optional)</label>
                                <div class="file-upload-area" onclick="document.getElementById('additionalDocuments').click()">
                                    <i class="fas fa-plus-circle fa-3x text-muted mb-3"></i>
                                    <p>Click to upload additional documents</p>
                                    <p class="small text-muted">You can select multiple files</p>
                                </div>
                                <input type="file" id="additionalDocuments" name="additionalDocuments" multiple accept=".jpg,.jpeg,.png,.pdf,.doc,.docx" style="display: none;" onchange="previewMultipleFiles(this, 'additionalPreview')" />
                                <div id="additionalPreview" class="mt-2"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Notes and Status Card -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-sticky-note"></i> Additional Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <textarea asp-for="Notes" class="form-control" style="height: 120px" placeholder="Additional notes..."></textarea>
                                    <label asp-for="Notes">Notes</label>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" />
                                    <label asp-for="IsActive" class="form-check-label">
                                        Policy is Active
                                    </label>
                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Update Insurance Policy
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function previewFile(input, previewId) {
            const preview = document.getElementById(previewId);
            const file = input.files[0];
            
            if (file) {
                const fileName = file.name;
                const fileSize = (file.size / 1024 / 1024).toFixed(2);
                
                preview.innerHTML = `
                    <div class="alert alert-success d-flex align-items-center">
                        <i class="fas fa-file-alt me-2"></i>
                        <div>
                            <strong>${fileName}</strong><br>
                            <small class="text-muted">Size: ${fileSize} MB</small>
                        </div>
                        <button type="button" class="btn btn-sm btn-outline-danger ms-auto" onclick="removeFile('${input.id}', '${previewId}')">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                `;
            }
        }

        function previewMultipleFiles(input, previewId) {
            const preview = document.getElementById(previewId);
            const files = input.files;
            
            if (files.length > 0) {
                let html = '<div class="mt-2">';
                for (let i = 0; i < files.length; i++) {
                    const fileName = files[i].name;
                    const fileSize = (files[i].size / 1024 / 1024).toFixed(2);
                    
                    html += `
                        <div class="alert alert-info d-flex align-items-center mb-2">
                            <i class="fas fa-file me-2"></i>
                            <div>
                                <strong>${fileName}</strong><br>
                                <small class="text-muted">Size: ${fileSize} MB</small>
                            </div>
                        </div>
                    `;
                }
                html += '</div>';
                preview.innerHTML = html;
            }
        }

        function removeFile(inputId, previewId) {
            document.getElementById(inputId).value = '';
            document.getElementById(previewId).innerHTML = '';
        }
    </script>
}
